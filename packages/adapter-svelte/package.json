{
  "name": "@xndrjs/adapter-svelte",
  "version": "0.1.0",
  "description": "Svelte adapter for xndr framework-agnostic state management. Functions for integrating StatePort with Svelte stores and runes.",
  "keywords": [
    "svelte",
    "adapter",
    "state-management",
    "stores",
    "runes",
    "framework-agnostic",
    "typescript"
  ],
  "author": "Fabio Fognani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xndrjs/xndrjs.git",
    "directory": "packages/adapter-svelte"
  },
  "homepage": "https://xndrjs.dev/",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "eslint .",
    "build": "tsup",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "prepublish": "pnpm format && pnpm lint && pnpm test && pnpm build && pnpm pack"
  },
  "dependencies": {
    "@xndrjs/core": "workspace:*"
  },
  "devDependencies": {
    "@xndrjs/config-eslint": "workspace:*",
    "@xndrjs/config-typescript": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.0.0",
    "@types/node": "^20.14.10",
    "eslint-plugin-svelte": "^2.36.0",
    "jsdom": "^27.0.0",
    "svelte": "^5.0.0",
    "tsup": "^8.5.0",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4",
    "@sveltejs/vite-plugin-svelte": "^5.0.0"
  },
  "peerDependencies": {
    "svelte": ">=5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
