{
  "name": "@xndrjs/core",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [],
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "eslint .",
    "build": "tsup",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "prepublish": "pnpm format && pnpm lint && pnpm test && pnpm build && pnpm pack"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "immer": "^10.0.0"
  },
  "devDependencies": {
    "@xndrjs/config-eslint": "workspace:*",
    "@xndrjs/config-typescript": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.7.2",
    "jsdom": "^27.0.0",
    "tsup": "^8.5.0",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "fast-deep-equal": "^3.1.3",
    "immer": "^10.0.0"
  }
}
