{
  "name": "@xndrjs/adapter-react",
  "version": "0.1.0",
  "description": "React adapter for xndr framework-agnostic state management. Hooks for integrating StatePort with React components.",
  "keywords": [
    "react",
    "adapter",
    "state-management",
    "hooks",
    "framework-agnostic",
    "typescript",
    "react-hooks"
  ],
  "author": "Fabio Fognani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xndrjs/xndrjs.git",
    "directory": "packages/adapter-react"
  },
  "homepage": "https://xndrjs.dev/",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "eslint .",
    "build": "tsup",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "prepublish": "pnpm format && pnpm lint && pnpm test && pnpm build && pnpm pack"
  },
  "dependencies": {
    "@xndrjs/cqrs": "workspace:*",
    "@xndrjs/fsm": "workspace:*",
    "@xndrjs/core": "workspace:*"
  },
  "devDependencies": {
    "@xndrjs/config-eslint": "workspace:*",
    "@xndrjs/config-typescript": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.10",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "jsdom": "^27.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tsup": "^8.5.0",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
