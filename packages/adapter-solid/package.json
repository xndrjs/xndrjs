{
  "name": "@xndrjs/adapter-solid",
  "version": "0.1.0",
  "description": "Solid.js adapter for xndr framework-agnostic state management. Functions for integrating StatePort with Solid signals.",
  "keywords": [
    "solid",
    "solidjs",
    "adapter",
    "state-management",
    "signals",
    "framework-agnostic",
    "typescript"
  ],
  "author": "Fabio Fognani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xndrjs/xndrjs.git",
    "directory": "packages/adapter-solid"
  },
  "homepage": "https://xndrjs.dev/",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "eslint .",
    "build": "tsup",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "prepublish": "pnpm format && pnpm lint && pnpm test && pnpm build && pnpm pack"
  },
  "dependencies": {
    "@xndrjs/core": "workspace:*"
  },
  "devDependencies": {
    "@xndrjs/config-eslint": "workspace:*",
    "@xndrjs/config-typescript": "workspace:*",
    "@solidjs/testing-library": "^0.8.9",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^20.14.10",
    "jsdom": "^27.0.0",
    "solid-js": "^1.8.17",
    "tsup": "^8.5.0",
    "typescript": "~5.9.3",
    "vite-plugin-solid": "^2.10.13",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "solid-js": ">=1.8.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
