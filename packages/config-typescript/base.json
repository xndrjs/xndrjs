{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "baseUrl": "../../",
    "paths": {
      "@xndrjs/adapter-react": [
        "packages/adapter-react/src"
      ],
      "@xndrjs/adapter-solid": [
        "packages/adapter-solid/src"
      ],
      "@xndrjs/adapter-svelte": [
        "packages/adapter-svelte/src"
      ],
      "@xndrjs/core": [
        "packages/core/src"
      ],
      "@xndrjs/cqrs": [
        "packages/cqrs/src"
      ],
      "@xndrjs/demo-common": [
        "packages/demo-common/src"
      ],
      "@xndrjs/devtools-react": [
        "packages/devtools-react/src"
      ],
      "@xndrjs/fsm": [
        "packages/fsm/src"
      ],
      "@xndrjs/memento": [
        "packages/memento/src"
      ]
    }
  }
}
