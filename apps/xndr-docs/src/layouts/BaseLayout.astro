---
import '../styles/global.css';
import MobileMenuWrapper from '../components/MobileMenuWrapper';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import { getSidebarData } from '../utils/sidebar';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'xndr',
  description = 'Framework-agnostic state management',
} = Astro.props;

const sidebarData = await getSidebarData();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site).href} />
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Exa:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://xndrjs.dev/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://xndrjs.dev/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Google Analytics -->
    <GoogleAnalytics />
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar__inner">
        <a href="/" class="navbar__brand" id="navbar-brand">
          <img src="/img/logo-squared.svg" alt="xndr Logo" class="navbar__logo" />
          <span class="navbar__title">xndr</span>
        </a>
        <div class="navbar__items">
          <a href="/docs/getting-started/introduction" class="navbar__link">docs</a>
          <a href="https://github.com/xndrjs/xndrjs" class="navbar__link" target="_blank" rel="noopener noreferrer">
            GitHub
            <svg width="13.5" height="13.5" aria-hidden="true" viewBox="0 0 24 24" class="icon-external-link">
              <path fill="currentColor" d="M21 13v10h-21v-19h12v2h-10v15h17v-8h2zm3-12h-10.988l4.035 4-6.977 7.07 2.828 2.828 6.977-7.07 4.125 4.172v-11z"/>
            </svg>
          </a>
        </div>
        <MobileMenuWrapper client:load sidebarData={sidebarData} />
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="footer__container">
        <div class="footer__section">
          <h3 class="footer__title">Packages</h3>
          <ul class="footer__links">
            <li><a href="/docs/core/overview">Core</a></li>
            <li><a href="/docs/adapters/react/overview">Adapters</a></li>
            <li><a href="/docs/patterns/cqrs/overview">Patterns</a></li>
          </ul>
        </div>
        <div class="footer__section">
          <h3 class="footer__title">Resources</h3>
          <ul class="footer__links">
            <li><a href="https://github.com/xndrjs/xndrjs" target="_blank" rel="noopener noreferrer">GitHub</a></li>
            <li><a href="https://www.npmjs.com/org/xndrjs" target="_blank" rel="noopener noreferrer">NPM</a></li>
          </ul>
        </div>
      </div>
      <div class="footer__copyright">
        <p>Copyright Â© {new Date().getFullYear()} xndrjs. Built with Astro.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .navbar {
    background: rgba(30, 30, 30, 0.95);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    z-index: 1000;
    width: 100%;
  }

  .navbar__inner {
    width: 100%;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60px;
  }

  .navbar__brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
    font-family: 'Lexend Exa', sans-serif;
    transition: color 0.2s ease;
  }

  .navbar__brand:hover {
    color: var(--xndr-primary-text);
  }

  .navbar__logo {
    height: 32px;
    width: 32px;
    margin-right: 0.75rem;
    filter: brightness(0) invert(1);
    display: block;
    flex-shrink: 0;
  }

  .navbar__title {
    font-family: 'Lexend Exa', sans-serif;
  }

  .navbar__items {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .navbar__link {
    font-weight: 700;
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    font-family: 'Lexend Exa', sans-serif;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .navbar__link:hover {
    color: var(--xndr-primary-text);
  }

  .icon-external-link {
    width: 14px;
    height: 14px;
    opacity: 0.7;
  }

  main {
    min-height: calc(100vh - 200px);
  }

  .footer {
    background: #360b18;
    border-top: 1px solid rgba(107, 31, 46, 0.2);
    padding: 3rem 0 2rem;
    margin-top: 4rem;
  }

  .footer__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .footer__section {
    display: flex;
    flex-direction: column;
  }

  .footer__title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 1rem;
    letter-spacing: 0.01em;
    font-family: 'Lexend Exa', sans-serif;
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: 0.5rem;
  }

  .footer__links a {
    color: rgba(255, 255, 255, 0.85);
    transition: color 0.2s ease;
    font-size: 0.95rem;
  }

  .footer__links a:hover {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: underline;
  }

  .footer__copyright {
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.9rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    text-align: center;
  }

  .footer__copyright a {
    color: var(--xndr-primary-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__copyright a:hover {
    color: #7A2E3C;
  }

  @media (max-width: 996px) {
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
    }

    main {
      padding-top: 60px;
    }

    .navbar__items {
      display: none;
    }
  }
</style>

