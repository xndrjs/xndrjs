---
import { marked } from 'marked';

interface Props {
  content?: string; // Markdown content
}

const { content } = Astro.props;

// Process markdown content if provided
const contentHtml = content ? marked(content) : null;
---

{contentHtml && (
  <section class="see-also">
    <h2 class="see-also__title">See Also</h2>
    <div class="see-also__content" set:html={contentHtml} />
  </section>
)}

<style>
  .see-also {
    margin-top: 2rem;
  }

  .see-also__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--xndr-text-primary);
    margin-bottom: 1rem;
    font-family: 'Lexend Exa', sans-serif;
  }

  .see-also__content {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
  }

  .see-also__content :global(ul),
  .see-also__content :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .see-also__content :global(li) {
    margin: 0.5rem 0;
  }

  .see-also__content :global(a) {
    color: var(--xndr-primary-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .see-also__content :global(a:hover) {
    text-decoration: underline;
  }

  .see-also__content :global(p) {
    margin: 0.5rem 0;
  }

  .see-also__content :global(p:first-child) {
    margin-top: 0;
  }

  .see-also__content :global(p:last-child) {
    margin-bottom: 0;
  }
</style>

