---
interface Props {
  items: Array<{ label: string; href: string; disabled?: boolean }>;
}

const { items } = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol class="breadcrumbs__list">
    {items.map((item, index) => (
      <li class={`breadcrumbs__item ${index === items.length - 1 ? 'breadcrumbs__item--active' : ''}`}>
        {index === items.length - 1 || item.disabled ? (
          <span class="breadcrumbs__link">{item.label}</span>
        ) : (
          <a href={item.href} class="breadcrumbs__link">{item.label}</a>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs {
    font-size: 1.125rem;
    margin: 0;
    margin-bottom: 1rem;
    padding: 0;
  }

  .breadcrumbs__list {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    padding: 0 !important;
    margin: 0 !important;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumbs__item {
    font-size: 1.125rem;
    display: flex;
    align-items: center;
  }

  .breadcrumbs__item:not(:last-child)::after {
    content: '/';
    margin-left: 0.5rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .breadcrumbs__link {
    font-size: 1.125rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.2s ease;
    text-decoration: none;
  }

  .breadcrumbs__link:hover {
    color: var(--xndr-primary-text);
  }

  /* Disabled items (spans) should not change color on hover */
  .breadcrumbs__item span.breadcrumbs__link:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  .breadcrumbs__item--active {
    background: transparent !important;
  }

  .breadcrumbs__item--active .breadcrumbs__link {
    color: var(--xndr-primary-text);
    background: transparent;
    font-size: 1.125rem;
    font-weight: 500;
  }

  .breadcrumbs__link:not(a) {
    cursor: default;
  }
</style>

